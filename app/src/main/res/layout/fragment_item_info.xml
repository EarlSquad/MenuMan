<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/bottom_sheet"
              android:layout_width="match_parent"
              android:layout_height="340dp"
              android:background="#fafafa"
              android:gravity="left"
              android:orientation="vertical"
              app:behavior_hideable="true"
              app:behavior_peekHeight="80dp"
              app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:gravity="center"
            android:id="@+id/menu_item_foreign_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/menu_item_english_name"/>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <org.earlsquad.menuman.SquareImageView
                    android:id="@+id/menu_item_image1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/backgrounds/scenic"/>

                <org.earlsquad.menuman.SquareImageView
                    android:id="@+id/menu_item_image2"
                    android:layout_margin="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/backgrounds/scenic"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:src="@drawable/calories"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:src="@drawable/carbs"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:src="@drawable/fat"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:src="@drawable/protein"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginBottom="0dp"
                android:paddingBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/menu_item_calories"
                    android:layout_width="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/menu_item_carbs"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />


                <TextView
                    android:id="@+id/menu_item_fat"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/menu_item_protein"
                    android:layout_width="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/menu_item_description"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
